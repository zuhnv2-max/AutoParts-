<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовый стиль для всех кнопок -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Стиль для маленьких кнопок -->
    <style name="AppButton.Small">
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Стиль для больших кнопок -->
    <style name="AppButton.Large">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Цветные варианты -->
    <style name="AppButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppButton.Success">
        <item name="backgroundTint">@color/success</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppButton.Danger">
        <item name="backgroundTint">@color/error</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>