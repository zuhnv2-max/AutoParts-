<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_catalog">

    <!-- Каталог -->
    <fragment
        android:id="@+id/navigation_catalog"
        android:name="com.autoparts.ui.catalog.CatalogFragment"
        android:label="Каталог"
        tools:layout="@layout/fragment_catalog" />

    <!-- Корзина -->
    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.autoparts.ui.cart.CartFragment"
        android:label="Корзина"
        tools:layout="@layout/fragment_cart" />

    <!-- Заказы -->
    <fragment
        android:id="@+id/navigation_orders"
        android:name="com.autoparts.ui.orders.OrdersFragment"
        android:label="Заказы"
        tools:layout="@layout/fragment_orders" />

    <!-- Профиль -->
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.autoparts.ui.profile.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_profile" />

</navigation>