<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    app:cardCornerRadius="@dimen/corner_radius_large"
    app:cardElevation="@dimen/elevation_medium"
    app:cardBackgroundColor="@color/background_card"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Номер заказа и дата -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/orderNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ORD-251215-0001"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15.12.2025 11:34"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Статус заказа -->
        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="Ожидает обработки"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingHorizontal="@dimen/spacing_medium"
            android:paddingVertical="6dp"
            android:background="@drawable/status_background" />

        <!-- Итоговая сумма -->
        <TextView
            android:id="@+id/orderTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="3499 руб."
            android:textColor="@color/primary_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Количество товаров -->
        <TextView
            android:id="@+id/orderItemsCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Товаров: 3"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Кнопка деталей -->
        <Button
            android:id="@+id/viewDetailsButton"
            style="@style/AppButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_small"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="Детали заказа" />

        <!-- Кнопка изменения статуса (только для админа) -->
        <Button
            android:id="@+id/changeStatusButton"
            style="@style/AppButton.Small"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="Изменить статус"
            android:backgroundTint="@color/secondary_orange"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>