<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/corner_radius_large"
    app:cardElevation="@dimen/elevation_medium"
    app:cardBackgroundColor="@color/background_card"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <!-- Заголовок товара -->
        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тормозные колодки Brembo P 85 097"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp" />

        <!-- Бренд -->
        <TextView
            android:id="@+id/productBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Brembo"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Артикул -->
        <TextView
            android:id="@+id/productArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Арт: BK-789-BR"
            android:textColor="@color/text_hint"
            android:textSize="11sp" />

        <!-- Категория -->
        <TextView
            android:id="@+id/productCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Фильтры"
            android:textColor="@color/primary_blue"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="@drawable/category_badge"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/spacing_small"
            android:background="@color/gray_200" />

        <!-- Цена -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3499 руб."
            android:textColor="@color/primary_blue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Кнопка добавления в корзину -->
        <Button
            android:id="@+id/addToCartButton"
            style="@style/AppButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="В корзину" />

    </LinearLayout>

</androidx.cardview.widget.CardView>