<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Название товара -->
        <TextView
            android:id="@+id/cartProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Масляный фильтр Mann-Filter W 914/2"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Цена за единицу -->
        <TextView
            android:id="@+id/cartProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="799 руб."
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Управление количеством -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Количество:"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/cartDecreaseButton"
                style="@style/AppButton.Small"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="−"
                android:textSize="20sp"
                android:backgroundTint="@color/gray_200"
                android:textColor="@color/text_primary"
                android:padding="0dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/cartQuantityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:paddingHorizontal="12dp"
                android:minWidth="30dp"
                android:gravity="center" />

            <Button
                android:id="@+id/cartIncreaseButton"
                style="@style/AppButton.Small"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="+"
                android:textSize="20sp"
                android:backgroundTint="@color/gray_200"
                android:textColor="@color/text_primary"
                android:padding="0dp"
                android:gravity="center" />

            <!-- Итого -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Итого:"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="end"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/cartTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="799 руб."
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Кнопка удаления -->
        <Button
            android:id="@+id/cartRemoveButton"
            style="@style/AppButton.Danger"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_small"
            android:layout_marginTop="12dp"
            android:text="Удалить"
            android:textSize="13sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>