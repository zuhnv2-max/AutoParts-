<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Доставка -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Способ доставки:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/deliveryGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioPickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Самовывоз"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Доставка курьером" />

        </RadioGroup>

        <!-- Адрес магазина (показывается при самовывозе) -->
        <LinearLayout
            android:id="@+id/pickupAddressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginTop="12dp"
            android:background="#F5F5F5"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Адрес магазина для самовывоза:"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/storeAddressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ул. Автозапчастей, д. 15, Москва\nЕжедневно с 9:00 до 21:00"
                android:textColor="#757575"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Адрес доставки (скрыт по умолчанию) -->
        <LinearLayout
            android:id="@+id/deliveryAddressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Адрес доставки:"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/addressInput"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Введите ваш полный адрес: город, улица, дом, квартира"
                android:inputType="textMultiLine|textPostalAddress"
                android:maxLines="4"
                android:gravity="top" />

        </LinearLayout>

        <!-- Телефон -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Телефон для связи:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+7 (999) 123-45-67"
            android:inputType="phone" />

        <!-- Оплата -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Способ оплаты:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/paymentGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Наличными при получении"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Картой при получении" />

            <RadioButton
                android:id="@+id/radioOnline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Онлайн оплата картой" />

        </RadioGroup>

        <!-- Комментарий к заказу -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Комментарий к заказу (необязательно):"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/commentInput"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Дополнительные пожелания, подъезд, код домофона и т.д."
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:gravity="top" />

    </LinearLayout>

</ScrollView>