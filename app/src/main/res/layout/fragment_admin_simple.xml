<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Шапка с заголовком -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#FF2196F3"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Панель администратора"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <!-- Панель управления сверху -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@android:color/background_light">

            <!-- Кнопка добавления -->
            <Button
                android:id="@+id/buttonAddProduct"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ДОБАВИТЬ"
                android:textSize="15sp"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:background="#FF2196F3"
                android:drawableStart="@android:drawable/ic_menu_add"
                android:drawablePadding="8dp"
                android:gravity="center" />

            <!-- Кнопка обновления -->
            <Button
                android:id="@+id/buttonRefresh"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ОБНОВИТЬ"
                android:textSize="15sp"
                android:textAllCaps="true"
                android:textColor="#FF2196F3"
                android:background="@android:color/transparent"
                android:drawableStart="@android:drawable/ic_menu_rotate"
                android:drawablePadding="8dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Кнопка очистки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            android:background="@android:color/background_light">

            <Button
                android:id="@+id/buttonClearAll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ОЧИСТИТЬ ВСЕ ТОВАРЫ"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:background="#FF9C27B0"
                android:drawableStart="@android:drawable/ic_delete"
                android:drawablePadding="8dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Список товаров -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewProducts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="8dp" />

        <!-- Сообщение при пустом списке -->
        <TextView
            android:id="@+id/textEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="48dp"
            android:text="Товары не найдены"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>